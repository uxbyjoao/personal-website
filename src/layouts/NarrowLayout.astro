---
import BaseLayout from "./BaseLayout.astro";

type Props = {
  title?: string;
  heading?: string;
  description?: string;
  ogImageUrl?: string;
};

const { title, heading, description, ogImageUrl } = Astro.props;
---

<BaseLayout title={title} description={description} ogImageUrl={ogImageUrl}>
  <main class="container pt-40">
    {heading && <h1 class="mb-10 text-3xl font-medium">{heading}</h1>}
    <slot />
  </main>
</BaseLayout>
