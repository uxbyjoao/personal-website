---
import BaseLayout from "./BaseLayout.astro";

type Props = {
  title?: string;
  heading?: string;
  description?: string;
  ogImageUrl?: string;
};

const { title, heading, description, ogImageUrl } = Astro.props;
---

<BaseLayout title={title} description={description} ogImageUrl={ogImageUrl}>
  <div>
    <h1>{heading}</h1>
    <h2>{description}</h2>
  </div>
  <div class="bg-green-500">
    <slot />
  </div>
</BaseLayout>
