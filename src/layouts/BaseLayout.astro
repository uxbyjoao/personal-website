---
import Footer from "@components/shell/Footer.astro";
import Navbar from "@components/shell/Navbar.astro";
import MobileNav from "@components/shell/MobileNav.astro";
import MetaHead from "@components/shell/MetaHead.astro";

import "../styles/style.css";

type Props = {
  title?: string;
  heading?: string;
  description?: string;
  ogImageUrl?: string;
};

const {
  title = "Jo√£o Gomes, Senior UX Designer in Berlin",
  heading,
  description = "I am a Senior UX Designer based in Berlin, Germany, currently working at UK-based startup, Nivoda.",
  ogImageUrl = "/assets/images/profile.png",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MetaHead title={title} description={description} ogImageUrl={ogImageUrl} />
    {
      import.meta.env.MODE === "production" && (
        <script src="../scripts/analytics.js" />
      )
    }
  </head>
  <body>
    <MobileNav />
    <div
      id="mobile-nav-overlay"
      class="hidden fixed top-0 left-0 z-40 w-screen h-screen bg-[#000000] opacity-0"
    >
    </div>
    <Navbar />
    <main class="container pt-40">
      {heading && <h1 class="text-3xl font-medium mb-10">{heading}</h1>}
      <slot />
    </main>
    <Footer />
    <script src="../scripts/mobileNav.ts"></script>
  </body>
</html>
