---
import { Image } from "@astrojs/image/components";

interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  format: string;
  caption?: string;
}

const { src, caption, alt, width, height, format } = Astro.props;
---
<figure>
  <Image src={src} alt={alt} width={width} height={height} format={format} />
  {caption && <figcaption>{caption}</figcaption>}
</figure>
