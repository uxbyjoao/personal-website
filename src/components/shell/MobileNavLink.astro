---
import { Icon } from "astro-icon";

interface Props {
  href: string;
  newWindow?: boolean;
}

const { href, newWindow } = Astro.props;
---

<a
  role="menuitem"
  href={href}
  class:list={[
    "flex justify-between items-center p-3 rounded-md font-medium",
    {
      "bg-blue-500/10 text-blue-500": Astro.url.pathname === href,
    },
    {
      "text-stone-700 dark:text-stone-50": Astro.url.pathname !== href,
    },
  ]}><slot />{newWindow && <Icon name="tabler:external-link" size={16} />}</a
>
