---
import { socialMedia } from "@data";

import SocialMedia from "@components/shell/SocialMedia.astro";

const date = new Date();
const year = date.getFullYear();
---

<footer
  class="container flex flex-col sm:flex-row justify-between items-center py-20"
>
  <div>
    <p class="text-sm text-center sm:text-right">
      Copyright &copy; {year}
      <strong>Jo&atilde;o Gomes</strong>, All Rights Reserved.
    </p>
    <p class="text-sm">
      <a
        class="underlined-link"
        href="https://github.com/uzzii-21/astro-portfolio"
        >Base Astro theme by Uzair Ahmed</a
      >.
    </p>
  </div>
  <ul class="flex gap-5">
    {
      socialMedia.map((social) => (
        <li>
          <SocialMedia {...social} />
        </li>
      ))
    }
  </ul>
</footer>
