---
import { socialMedia } from "@data";

import { Icon } from "astro-icon";

import MobileNavLink from "@components/shell/MobileNavLink.astro";

const behanceUrl = socialMedia.filter((social) => social.name === "Behance")[0]
  .url;
---

<div
  id="mobile-nav-drawer"
  class="fixed flex flex-col top-0 right-[-230px] z-50 w-[230px] h-screen bg-stone-50 dark:bg-stone-900 px-5 py-6"
>
  <div>
    <div class="flex justify-between items-center">
      <p class="font-medium p-3">Jo√£o Gomes</p>
      <button class="text-stone-500 p-2" id="mobile-nav-close">
        <Icon name="tabler:x" size={20} />
      </button>
    </div>
    <nav class="mt-10 flex flex-col">
      <MobileNavLink href="/">Home</MobileNavLink>
      <MobileNavLink href={behanceUrl} newWindow>Portfolio</MobileNavLink>
      <MobileNavLink href="/experience">Experience</MobileNavLink>
      <MobileNavLink href="/blog">Blog</MobileNavLink>
    </nav>
  </div>
  <div class="flex px-3 mt-10 items-center gap-3">
    <button
      aria-label="Dark/Light Mode"
      id="theme-button"
      class="text-purple-500 dark:text-orange-500 rounded-md p-2 bg-stone-50 dark:bg-stone-800 border border-stone-200 dark:border-stone-700/50"
    ></button>
    <p class="text-sm">Switch theme</p>
  </div>
</div>
