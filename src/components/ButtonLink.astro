---
import { Icon } from "astro-icon";

interface Props {
  href: string;
  iconLeft?: string;
}

const { href, iconLeft } = Astro.props;
---

<a
  href={href}
  class="group inline-flex items-center gap-2 rounded bg-blue-500/10 py-2 px-3 text-blue-500 transition-colors hover:bg-blue-500/20"
>
  <slot />
  {
    iconLeft && (
      <Icon
        name={iconLeft}
        size={20}
        class="transition-transform group-hover:translate-x-1"
      />
    )
  }
</a>
