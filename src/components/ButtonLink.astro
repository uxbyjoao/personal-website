---
import { Icon } from "astro-icon";

interface Props {
  href: string;
  iconLeft?: string;
}

const { href, iconLeft } = Astro.props;
---

<a
  href={href}
  class="group text-blue-500 py-2 px-3 bg-blue-500/10 hover:bg-blue-500/20 rounded inline-flex gap-2 items-center transition-colors"
>
  <slot />
  {
    iconLeft && (
      <Icon
        name={iconLeft}
        size={20}
        class="group-hover:translate-x-1 transition-transform"
      />
    )
  }
</a>
