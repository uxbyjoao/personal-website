---
import { checkAuth, formatDate } from "@utils";
import { getEntryBySlug } from "astro:content";

import BaseLayout from "@layouts/BaseLayout.astro";

const { slug } = Astro.params;
const cookie = Astro.cookies.get("auth_token").value;
const project = await getEntryBySlug("projects", slug);

if (!cookie || !checkAuth(cookie)) {
  return Astro.redirect(`/login?redirect=/projects/${slug}`);
}

if (!project) {
  return Astro.redirect("/404");
}

const { title, description, datePublished, tags } = project.data;

const { Content } = await project.render();
---

<BaseLayout title={title} description={description}>
  <div class="flex items-center justify-center pt-[260px] pb-[200px]">
    <div class="max-w-[700px] px-4">
      <h1 class="text-xl font-medium md:text-6xl">
        {title}
      </h1>
      {description && <h2 class="mt-5 text-xl md:text-2xl">{description}</h2>}
      <div class="mt-4">
        <p class="text-xs uppercase tracking-wider">
          Published on <strong>{formatDate(datePublished)}</strong>
        </p>
        <div class="mt-4 flex gap-2">
          {
            tags.map((tag) => (
              <span class="rounded bg-blue-500/10 px-2 py-1 text-sm font-medium text-blue-400">
                #{tag}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </div>
  <div class="m-auto grid max-w-[1200px] grid-cols-12 gap-x-6 px-4">
    <Content />
  </div>
</BaseLayout>
